    <script type="text/javascript">
        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var d = today.getDate();
            var mo = today.getMonth();
            var y = today.getFullYear();
            // adiciona um zero na frente de números<10
            h = checkTime(h);
            m = checkTime(m);
            d = checkTime(d);
            mo = mo + 1;
            mo = checkTime(mo);
            document.getElementById('hora').innerHTML = h + ":" + m;
            document.getElementById('data').innerHTML = d + "/" + mo + "/" + y;
            t = setTimeout('startTime()', 500);
        }

        function checkTime(i) {
            if (i < 10) {
                i = "0" + i;
            }
            return i;
        }
    </script>

    <script language="JavaScript" type="text/javascript">
        function InserirData() {
            var today = new Date();
            var d = today.getDate();
            var mo = today.getMonth();
            var y = today.getFullYear();
            // adiciona um zero na frente de números<10
            d = checkTime(d);
            mo = mo + 1;
            mo = checkTime(mo);
            var TODAY = d + "/" + mo + "/" + y;
            var DAYEXP = d + 7 + "/" + mo + "/" + y;
            form1.ultimaatu.value = TODAY;
            form2.dataexpira.value = DAYEXP;
        }
    </script>
