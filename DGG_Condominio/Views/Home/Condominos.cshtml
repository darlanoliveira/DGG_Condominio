@{
    ViewData["Title"] = "Condomínio Personalizado";

}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <!-- Nome que será exibido na aba do navegador -->
    <title>Condomínio Personalizado</title>

    <script type="text/javascript" src="js/jquery.js"></script>
    <script type="text/javascript" src="js/jquery.maskedinput.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script type="text/javascript">
        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var d = today.getDate();
            var mo = today.getMonth();
            var y = today.getFullYear();
            // adiciona um zero na frente de números<10
            h = checkTime(h);
            m = checkTime(m);
            d = checkTime(d);
            mo = mo + 1;
            mo = checkTime(mo);
            document.getElementById('hora').innerHTML = h + ":" + m;
            document.getElementById('data').innerHTML = d + "/" + mo + "/" + y;
            t = setTimeout('startTime()', 500);
        }

        function checkTime(i) {
            if (i < 10) {
                i = "0" + i;
            }
            return i;
        }
    </script>
</head>

<script type="text/javascript">
    $(document).ready(function () {
        $("input.data").mask("99/99/9999")
    });
</script>

<body onload="startTime()">
    <div>
        <img class="media-object" src="~/images/logo.png" width="34%" height="210px" id="imgLogo" style="margin-top: 0.7%; margin-left: 0.7%">
        <div class="text text-danger" id="hora" style="font-size: 300%; margin-top: -13%;margin-right: 2%" align="right"></div>

        <div style="margin-right: 0.5%" align="right">
            <input class="btn btn-lg btn-info" type="button" style="width: 10.8%" value="Documentos" onclick="location.href='documentoscond.html'">
        </div>

        <div class="text text-info" style="margin-top: 5.7%; margin-left: 0.7%">Usuário: </div>
        <div class="text text-info" style="margin-left: 0.7%"><BR>Nome: @ViewBag.Nome </BR></div>
        <div class="text text-info" style="margin-left: 0.7%"><BR>Data: <a class="text text-info" id="data"></a></BR></div>

        <div style="margin-left: 0.7%">
            <br>
            <input class="btn btn-sm btn-danger" type="button" style="width: 11%" value="Sair">
            <br>
            <input class="btn btn-sm btn-info" type="button" style="width: 11%; margin-top: 0.5%" value="Configuração" onclick="location.href='configuracaocond.html'">
        </div>

        <div class="container-fluid" style="margin-top: -26.2%; margin-left: 13%; width: 76%">
            <div class="text text-info" align="center">
                <h1>Condomínio Smille Vila Prudente</h1><br>
            </div>

            <div class="text text-info">
                <h4>Aviso de correio</h4>
            </div>

            <div class="text text-info" style="margin-left: 51%; margin-top: -3.3%">
                <h4>Preferência de retirada de encomenda</h4>
            </div>

            <hr>
            <form accept-charset="UTF-8" method="get" action="">
                <div class="form-group col-md-6">
                    <div class="panel panel-default" style="overflow-x: scroll; overflow-y: scroll; word-break: keep-all">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" style="align-items: center" nowrap="nowrap" width="10%"></th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Tipo</th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Data</th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Rastreio</th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Status</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td id="retirar" name="retirar" nowrap="nowrap"><input class="btn btn-sm btn-info" style="width: 100%" type="submit" value="Retirado"></td>
                                    <td id="tipo" name="tipo" nowrap="nowrap"></td>
                                    <td id="data" name="data" nowrap="nowrap"></td>
                                    <td id="rastreio" name="rastreio" nowrap="nowrap"></td>
                                    <td id="status" name="status" nowrap="nowrap"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>

            <form accept-charset="UTF-8" method="post" action="">
                <div class="form-group col-md-6" style="margin-left: 51%; margin-top: -13%">
                    <input type="submit" class="btn btn-lg btn-info col-md-12" value="Retirar na portaria"><br><br>
                    <input type="submit" class="btn btn-lg btn-info col-md-12" value="Retirar na administração">
                </div>
            </form>

            <br>
            <div class="text text-info">
                <h4>Aluguel de áreas comuns</h4>
            </div>

            <hr>
            <form accept-charset="UTF-8" method="post" action="">
                <div class="row" style="margin-left: 1.2%">
                    <div class="form-group col-md-3">
                        <label for="area">Área desejada</label>
                        <input type="list" name="areas" id="area" class="form-control" placeholder="Selecione a área desejada">
                        <datalist id="areas"></datalist>
                    </div>

                    <div class="form-group col-md-2">
                        <label for="dataaluga">Data desejada</label>
                        <input type="text" name="dataaluga" id="dataaluga" class="data form-control" placeholder="00/00/0000">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="convidados">Lista de convidados</label>
                        <input type="file" name="convidados" id="convidados" class="form-control-file btn btn-sm btn-outline-secondary">
                    </div>

                    <input class="btn btn-lg btn-info" type="submit" value="Salvar" style="height: 3%; margin-left: 80.3%; margin-top: -5.6%">
                    <input class="btn btn-lg btn-danger" type="reset" value="Cancelar" style="height: 3%; margin-left: 1%; margin-top: -5.6%">
                </div>
            </form>

            <br>
            <div class=" text text-info">
                <h4>Quadro de avisos</h4>
            </div>

            <div class="text text-info" style="margin-left: 51%; margin-top: -3.3%">
                <h4>Envie sua sugestão, dúvida ou crítica</h4>
            </div>

            <hr>
            <form accept-charset="UTF-8" method="get" action="">
                <div class="form-group col-md-6">
                    <div class="panel panel-default" style="overflow-x: scroll; overflow-y: scroll; word-break: keep-all">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" style="text-align: center; width: 30%" nowrap="nowrap">Data</th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Aviso</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td id="data" name="data" nowrap="nowrap">00/00/0000</td>
                                    <td id="aviso" name="aviso" nowrap="nowrap"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>

            <form accept-charset="UTF-8" method="post" action="SalvarMsg">
                <div class="form-group col-md-6" style="margin-left: 51%; margin-top: -13.2%">
                    <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Digite o título da mensagem aqui">
                    <textarea name="mensagem" id="mensagem" class="form-control" rows="3" style="margin-top: 1.5%" placeholder="Digite suas sugestões, dúvidas ou críticas aqui"></textarea><br><br>
                    <input type="submit" name="enviar" id="enviar" class="btn btn-lg btn-info" style="margin-top: -10%; margin-left: 61.2%" value="Enviar">
                    <input type="reset" name="cancelar" id="cancelar" class="btn btn-lg btn-danger" style="margin-top: -10%; margin-left: 1%" value="Cancelar">
                </div>
            </form>

            <div class="text text-info">
                <h4>Resposta da sua sugestão, dúvida ou crítica</h4>
            </div>

            <hr>
            <form accept-charset="UTF-8" method="get" action="">
                <div class="form-group col-md-12">
                    <div class="panel panel-default" style="overflow-x: scroll; overflow-y: scroll; word-break: keep-all">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" style="text-align: center; width: 10%" nowrap="nowrap">Data</th>
                                    <th scope="col" style="text-align: center; width: 30%" nowrap="nowrap">Título da sua mensagem</th>
                                    <th scope="col" style="text-align: center" nowrap="nowrap">Resposta da administração</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td id="data" name="data" nowrap="nowrap">00/00/0000</td>
                                    <td id="titulo" name="titulo" nowrap="nowrap"></td>
                                    <td id="resposta" name="resposta" nowrap="nowrap"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>